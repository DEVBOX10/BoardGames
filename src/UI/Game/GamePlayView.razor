@inherits GamePlayBase

@if (Game.RoundCount.HasValue && Game.Stage != GameStage.Ended) {
    <Badge Color="Color.Dark" Float="Float.Right" Style="font-size: 16px">
        Round @(Game.RoundIndex + 1) / @Game.RoundCount.Value
    </Badge>
}
<Paragraph>
    Players: <AppUsersBadge Users="@OrderedUsers" />
</Paragraph>

@if (Game.Stage == GameStage.Ended) {
    <Note Title="Game ended!">
        <GameMessageSpan Text="@Game.StateMessage" />
    </Note>
} else {
    <Paragraph>
        <GameMessageSpan Text="@Game.StateMessage" />
    </Paragraph>
}

<MatchingComponentFor
    Source="@GameEngine" SourceParameterName="GameEngine" Scope="@ComponentScopes.GamePlay"
    Model="@Model" />
